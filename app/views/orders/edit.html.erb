<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Price At Order</th>
      <th>Quantity</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
    <% @order.products_per_orders.each do |products_per_order| %>
      <tr>
