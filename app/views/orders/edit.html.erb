        <td><%= products_per_order.unit_price %></td>
        <td><%= products_per_order.quantity %></td>
        <td><%= products_per_order.unit_price * products_per_order.quantity %></td>
        <td><%= link_to 'Destroy', order_products_per_order_path(params[:id],products_per_order.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
</tbody>
</table>
