<h1>Products Per Orders</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Product</th>
      <th>Unit price</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products_per_orders.each do |products_per_order| %>
      <tr>
        <td><%= products_per_order.order_id %></td>
        <td><%= products_per_order.product_id %></td>
        <td><%= products_per_order.unit_price %></td>
        <td><%= products_per_order.quantity %></td>
        
      </tr>
    <% end %>
    <%= link_to "Back", order_path(params[:order_id]) %>
  </tbody>
</table>

